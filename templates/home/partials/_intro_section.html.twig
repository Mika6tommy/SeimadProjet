<div class="intro intro-carousel swiper position-relative">

    <div class="swiper-wrapper">

      {% for property in properties %}
              <div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url({{asset('assets/img/' ~ property.Lien )}})">
                <div class="overlay overlay-a"></div>
                <div class="intro-content display-table">
                  <div class="table-cell">
                    <div class="container">
                      <div class="row">
                        <div class="col-lg-8">
                          <div class="intro-body">
                            <p class="intro-title-top">
                              <br>
                            </p>
                            <h1 class="intro-title mb-4 "> 
                                <a class="color-t" href="{{ path('app_property_show', {'id': property.id, 'slug': property.slug}) }}">
                              <br> {{property.title}} 
                            </h1>
                            <p class="intro-subtitle intro-price">
                              <a href="{{ path('app_property_show', {'id': property.id, 'slug': property.slug}) }}"><span class="price-a"> |  {{property.formatedPrice}} MGA</span></a>
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
      {%   endfor  %}
      </div>
    <div class="swiper-pagination"></div>
  </div>